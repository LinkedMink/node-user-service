{
  "name": "@linkedmink/node-user-service",
  "version": "0.11.3",
  "description": "This service authenticates users against records in a MongoDB and issues JWT tokens with claims (permissions) embedded in them. It's designed to be used in a microservice architecture where claims are defined by associated services.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/node-user-service"
  },
  "private": true,
  "scripts": {
    "start": "ts-node-dev --inspect --respawn --transpile-only -r dotenv/config ./src/index.ts",
    "start:built": "node -r dotenv/config ./build/index.js",
    "build": "tsc --project ./tsconfig.json && yarn postbuild",
    "build:prod": "tsc --project ./tsconfig.prod.json && yarn postbuild",
    "postbuild": "node -r dotenv/config ./build/scripts/CreateOpenApiDoc.js",
    "postinstall": "husky install || cd .",
    "test": "jest --config jest.config.ts",
    "test:debug": "jest --config jest.config.ts --cache=false --detectOpenHandles --runInBand --coverage=false",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "format": "prettier --write ./{src,tests}/**/*.ts docs/*.yaml",
    "addUsers": "node -r dotenv/config ./build/scripts/AddUsers.js",
    "addClaims": "node -r dotenv/config ./build/scripts/AddClaims.js"
  },
  "bin": {
    "node-user-service": "./build/index.js",
    "node-user-service-addClaims": "./build/scripts/AddClaims.js",
    "node-user-service-addUsers": "./build/scripts/AddUsers.js"
  },
  "dependencies": {
    "@linkedmink/multilevel-aging-cache": "~0.5.1",
    "@linkedmink/multilevel-aging-cache-ioredis": "~0.5.1",
    "@linkedmink/passport-mutual-key-challenge": "~0.1.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.1",
    "dotenv": "^10.0.0",
    "email-templates": "^8.0.8",
    "express": "^4.17.1",
    "ioredis": "^4.28.2",
    "mongoose": "^5.13.13",
    "nodemailer": "^6.7.2",
    "openapi-validator-middleware": "^3.2.4",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.2",
    "swagger-jsdoc": "^6.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/email-templates": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/pug": "^2.0.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "openapi-types": "^9.3.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2",
    "yaml": "^1.10.2"
  },
  "optionalDependencies": {
    "swagger-ui-express": "^4.2.0"
  },
  "packageManager": "yarn@3.0.2"
}
