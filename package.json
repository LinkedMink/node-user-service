{
  "name": "node-user-service",
  "version": "0.9.9",
  "description": "This service authenticates users against records in a MongoDB and issues JWT tokens with claims (permissions) embedded in them. It's designed to be used in a microservice architecture where claims are defined by associated services.",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/node-user-service"
  },
  "private": true,
  "scripts": {
    "start": "ts-node-dev --inspect --respawn --transpileOnly -r dotenv/config ./src/App.ts",
    "build": "tsc",
    "postBuild": "node -r dotenv/config ./build/src/scripts/PostBuild.js",
    "startApp": "node -r dotenv/config ./build/src/App.js",
    "watch": "ts-node-dev --respawn --transpileOnly -r dotenv/config ./src/App.ts",
    "test": "jest",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "format": "prettier --write ./src/**/*.ts ./tests/**/*.ts ./docs/*.yaml ./*.js ./*.json",
    "containerize": "npm run build && npm run postBuild && docker build -t linkedmink/node-user-service .",
    "addUser": "node -r dotenv/config ./build/src/scripts/AddUser.js",
    "seedClaims": "node -r dotenv/config ./build/src/scripts/SeedClaims.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.0",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.2",
    "express": "^4.17.1",
    "mongoose": "^5.11.8",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/email-templates": "^8.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/mongodb": "^3.6.3",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.16",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "openapi-types": "^7.0.1",
    "prettier": "^2.2.1",
    "request": "^2.88.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
