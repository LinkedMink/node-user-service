{
  "name": "node-user-service",
  "version": "0.10.0",
  "description": "This service authenticates users against records in a MongoDB and issues JWT tokens with claims (permissions) embedded in them. It's designed to be used in a microservice architecture where claims are defined by associated services.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/node-user-service"
  },
  "private": true,
  "scripts": {
    "start": "ts-node-dev --inspect --respawn --transpile-only -r dotenv/config ./src/App.ts",
    "build": "tsc --project ./tsconfig.json",
    "build:prod": "tsc --project ./tsconfig.prod.json",
    "postbuild": "yarn run buildPostCombined",
    "postbuild:prod": "yarn run buildPostCombined",
    "buildPostCombined": "node -r dotenv/config ./build/scripts/CreateOpenApiDoc.js",
    "startBuilt": "node -r dotenv/config ./build/App.js",
    "test": "jest --config jest.config.js",
    "test:debug": "jest --config jest.debug.config.js --cache=false --detectOpenHandles --runInBand",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "format": "prettier --write ./{src,tests}/**/*.ts docs/*.yaml ./*.js{,on}",
    "containerize": "yarn run build && docker build -t linkedmink/node-user-service .",
    "addUsers": "node -r dotenv/config ./build/scripts/AddUsers.js",
    "addClaims": "node -r dotenv/config ./build/scripts/AddClaims.js"
  },
  "bin": {
    "node-user-service": "./build/App.js"
  },
  "dependencies": {
    "@linkedmink/multilevel-aging-cache": "~0.4.9",
    "@linkedmink/multilevel-aging-cache-ioredis": "~0.4.9",
    "@linkedmink/passport-mutual-key-challenge": "~0.1.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.0",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.3",
    "express": "^4.17.1",
    "express-openapi-validate": "^0.5.1",
    "ioredis": "^4.22.0",
    "mongoose": "^5.11.8",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/email-templates": "^8.0.1",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.19.4",
    "@types/jest": "^26.0.19",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.22",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "openapi-types": "^7.0.1",
    "prettier": "^2.2.1",
    "request": "^2.88.2",
    "swagger-jsdoc": "^6.0.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "yaml": "^2.0.0-3"
  },
  "optionalDependencies": {
    "swagger-ui-express": "^4.1.6"
  }
}
