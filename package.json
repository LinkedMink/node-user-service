{
  "name": "node-user-service",
  "version": "0.1.0",
  "description": "Service for authenticating and managing users",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/node-user-service"
  },
  "private": true,
  "scripts": {
    "start": "npm run build && npm run startApp",
    "build": "tsc",
    "startApp": "node -r dotenv/config ./build/src/app.js",
    "watch": "ts-node-dev --respawn --transpileOnly -r dotenv/config ./src/app.ts",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "lintTest": "tslint --fix -c tslint.json 'tests/**/*.ts'",
    "containerize": "npm run build && docker build -t linkedmink/node-user-service .",
    "addUser": "node -r dotenv/config ./build/src/scripts/addUser.js",
    "seedClaims": "node -r dotenv/config ./build/src/scripts/seedClaims.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.12",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "~4.0.0",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/mongodb": "^3.3.11",
    "@types/mongoose": "^5.5.32",
    "@types/morgan": "^1.7.37",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "~4.1.0",
    "@types/winston": "^2.4.4",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
